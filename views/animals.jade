extends layout

block styles
  link(rel='stylesheet', href='/stylesheets/bootstrap.css')

block scripts
  script(src='/javascripts/jquery.min.js')
  script(src='/javascripts/bootstrap.min.js')

block content
  article#app-root.full-window.flex-row.flex-children-fill
    section#main-controls.flex-column
      section#timing-controls.flex-row.flex-padded
        .btn.btn-default 30s
        .btn.btn-default 45s
        .btn.btn-default 60s
        .btn.btn-default 90s
        .btn.btn-default: span.glyphicon.glyphicon-ban-circle

      section#animal-selection-controls.flex-grow
        .message.flex-column.flex-children-center
          .message-content Please wait while we get the animals...

    section#image.flex-column
      section#image-pane.flex-grow.flex-row.flex-padded.flex-children-fill
        .empty-icon.flex-row.flex-children-center
          span.glyphicon.glyphicon-pencil
      section#image-controls.flex-row.flex-padded.flex-children-fill
        .btn.btn-success Start
